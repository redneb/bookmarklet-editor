{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",

		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"isolatedModules": true,

		"strict": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true
	},
	"include": ["src"]
}
